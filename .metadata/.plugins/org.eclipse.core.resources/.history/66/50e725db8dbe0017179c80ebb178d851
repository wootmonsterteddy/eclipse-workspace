#include <stdio.h>

int main(void)
{
	typedef struct
	{
		unsigned short age;
		char *name;
	}person;

	person person1, person2, person3;

	person1.name = "Erik";
	person1.age = 24;
	person2.name = "Anna";
	person2.age = 30;
	person3.name = "Allan";
	person3.age = 91;

	printf("First person's name is '%s' and the age is '%hu'",person1.name,person1.age);
	printf("Second person's name is '%s' and the age is '%hu'",person2.name,person2.age);
	printf("Third person's name is '%s' and the age is '%hu'",person3.name,person3.age);

	return 0;
}
